{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testMatch": ["<rootDir>/test/**/*.e2e-spec.{ts,js}"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coverageDirectory": "./coverage-e2e",
  "coverageThreshold": {
    "global": {
      "lines": 60,
      "statements": 60
    }
  },
  "moduleNameMapper": {
    "@mezcal/(.*)$": "<rootDir>/src/$1"
  },
  "testTimeout": 10000
}
